{
  "manifest_version": 2,
  "name": "My Tabs Helper",
  "version": "0.1",
  "description": "A simple tab management tool inspired by All Tabs Helper",
  "permissions": [
    "tabs",
    "tabHide",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Tabs Helper",
    "default_popup": "popup.html"
  },
  "commands": {
    "open-tabs-helper": {
      "suggested_key": {
        "default": "Alt+Shift+H"
      },
      "description": "Open tab helper popup"
    },
    "open-full-view": {
      "suggested_key": {
        "default": "Alt+Shift+F"
      },
      "description": "Open full view"
    },
    "open-sidebar": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Open sidebar"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "sidebar_action": {
    "default_title": "Tabs",
    "default_panel": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-search.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
